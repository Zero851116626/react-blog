.c-nav-article-type
  color #ffffff
  margin 20px 25px 0
  position: relative
  .type
    .type-title
      text-align: center
    .type-content
      font-size 14px
      overflow: hidden;
      text-overflow:ellipsis;
      white-space: nowrap;
  &::after
    position absolute
    bottom -15px
    left 0
    content: ''
    display: block
    width: 100%
    height: 1px
    border-top: 1px dashed #eee