.c-person-info
  width: 100%
  height 225px
  padding-top 25px
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  color #fff
  .user-pic
    display: block
    width: 50px
    height 50px
    border-radius: 50%
    background-color pink
    margin 0 auto
  .user-info
    display: flex
    flex-direction: column
    justify-content: space-between
    align-items: center
    font-size 14px
    margin-top 18px