.v-artical
  position: relative
  height clac(100vh - 72px)
  padding-top 72px
  .head-hoder
    position fixed
    top: 0
    left 0
    width: 100%
    height 70px
    background-color #fff
    border-bottom 2px solid #f7f7f7
  .menu-btn
    position: fixed
    top 20px;
    left 20px
    width 100px;
    height 30px;
    font-size 16px
    display: flex
    justify-content: space-around
    align-items: center
    background-color rgba(255,255,255,0)
    border 1px solid black
    border-radius: 5px
    color #black
    cursor pointer
  .content-warp
    height calc(100vh - 72px)
    .content
      width: 900px
      height 100%
      margin 0 auto
      display: flex
      justify-content: space-between
      align-items: center
      .article-list
        width: 650px
        height: 100%
        overflow: auto
        &::-webkit-scrollbar{
          display:none;
        }
        .years
          margin-left 10px
          padding-left 20px
          .list-item
            margin-left 20px
            height 24px
            display: flex
            justify-content: flex-start
            align-items: center
            .point
              display inline-block
              width: 5px
              height 5px
              border-radius: 50%
              background-color black
            .date
              display: inline-block
              margin 0 15px 0 
            .title
              display: inline-block
              max-width: 400px
              overflow hidden
              text-overflow:ellipsis;
              white-space: nowrap;
            span 
              height 24px
              line-height: 24px
              vertical-align: center
      .article-strategy
        width 248px
        height: 100%
        border-left 2px solid #f7f7f7
        .choose-tag
          text-align: center
          font-size 14px
          margin-top 10px